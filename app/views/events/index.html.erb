<% provide(:title, "Concert") %>
<h1>Les meilleurs concerts avec vos potes !</h1>
<h2><%= link_to "Inscription", signup_path, class: 'link-to-text-color' %></h2>
  <div id="results">
    <% @events.each do |e|%>
      <div class="result">
        <h2><%= e.name %> </h2>
        <img src="https://s3-media1.fl.yelpcdn.com/bphoto/pqab1YHTEuGX7ciSkK6loQ/ls.jpg"/><hr>
        Le <%= e.date.strftime("%d %m %Y") unless e.date.nil? %>  <br />
        à <%= e.place %> <br />
        <%= link_to "Voir", e, class: "btn btn-sm btn-info", style:"width:50%;" %> <br />
        <% if logged_in? %>
            <% if e.user_attendees.include?(current_user) %>
                <p class="inscrit"> Tu y vas! </p>
            <% elsif e.date > Time.now %>
                <p class="rejoindre"> <%= button_to 'Rejoindre', attend_event_path(e), method: :post, confirm: 'C\'est bon ça?',  class: "btn btn-sm btn-primary", style:"width:50%;" %> </p>
            <% else %>

            <% end %>
        <% end %>
      </div>
    <% end %>
    </div>
